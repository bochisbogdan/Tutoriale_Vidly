@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>
        Genre:<p>@Model.Name</p>
    </li>
    <li>
        Release Date:<p>@Model.ReleaseDate.ToShortDateString()</p> 
    </li>
    <li>
        Date Added:<p>@Model.ReleaseDate.ToShortDateString()</p>
    </li>
    <li>
        Number In  Stock:<p>@Model.StockNumber</p>
    </li>
</ul>

