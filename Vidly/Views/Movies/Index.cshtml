@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<h5 class="btn btn-danger"><a href="~/Movies/New">New Movie</a></h5>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name,"Details","Movies", new { id = movie.Id}, null)    
                    @Html.ActionLink("Edit","Edit","Movies", new { id = movie.Id},null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>
